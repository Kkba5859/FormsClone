@page "/create-template"
@using FormsClone.Models.Templates
@inject ITemplatesService TemplatesService

<EditForm Model="@Template" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="title">Название</label>
        <InputText id="title" class="form-control" @bind-Value="Template.Title" required />
    </div>

    <div class="form-group">
        <label for="description">Описание</label>
        <InputTextArea id="description" class="form-control" @bind-Value="Template.Description" required />
    </div>

    <div class="form-group">
        <label for="theme">Тема</label>
        <InputText id="theme" class="form-control" @bind-Value="Template.Theme" />
    </div>

    <button class="btn btn-primary" type="submit">Сохранить</button>
    <button class="btn btn-secondary" type="button" @onclick="Cancel">Отменить</button>
</EditForm>

@code {
    [Parameter] public Template Template { get; set; } = new Template();
    [Parameter] public EventCallback<bool> OnSave { get; set; }

    private async Task HandleValidSubmit()
    {
        if (Template.Id == 0)
        {
            await TemplatesService.CreateTemplateAsync(Template);
        }
        else
        {
            await TemplatesService.UpdateTemplateAsync(Template);
        }

        await OnSave.InvokeAsync(true); // Сообщаем родителю об успешном сохранении
    }

    private void Cancel()
    {
        OnSave.InvokeAsync(false); // Сообщаем родителю об отмене
    }
}