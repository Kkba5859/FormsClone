@page "/templates"
@using FormsClone.Models.Templates
@using FormsClone.Models.User.Service
@inject ITemplatesService TemplatesService
@inject NavigationManager NavigationManager
@inject IUserService UserService

<h3>Шаблоны</h3>

<div class="form-group d-flex">
    <InputText @bind-Value="_searchTerm" placeholder="Поиск..." class="form-control me-2" />
    <button @onclick="SearchTemplates" class="btn btn-primary">Поиск</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Тематика</th>
            <th>Теги</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (_templates.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-center">Нет доступных шаблонов.</td>
            </tr>
        }
        else
        {
            foreach (var template in _filteredTemplates)
            {
                <tr>
                    <td>@template.Title</td>
                    <td>@template.Description</td>
                    <td>@template.Theme</td>
                    <td>@string.Join(", ", template.Tags ?? Array.Empty<string>())</td>
                    <td>
                        @if (_isLoggedIn) // Показываем кнопки редактирования только для авторизованных пользователей
                        {
                            <button @onclick="() => EditTemplate(template)" class="btn btn-secondary">Редактировать</button>
                            <button @onclick="() => ConfirmDeleteTemplate(template)" class="btn btn-danger">Удалить</button>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (_isLoggedIn) // Показываем кнопку создания нового шаблона только для авторизованных пользователей
{
    <button @onclick="CreateNewTemplate" class="btn btn-primary">Создать новый шаблон</button>
}

@if (_templateToDelete != null)
{
    <ConfirmDeleteModal Template="_templateToDelete" OnConfirm="HandleDeleteConfirmation" />
}

@code {
    private List<Template> _templates = new List<Template>();
    private List<Template> _filteredTemplates = new List<Template>();
    private string _searchTerm = string.Empty;
    private Template? _templateToDelete;
    private bool _isLoggedIn; // Состояние для проверки, залогинен ли пользователь

    protected override async Task OnInitializedAsync()
    {
        _isLoggedIn = await UserService.IsUserLoggedInAsync(); // Проверяем, авторизован ли пользователь
        await RefreshTemplates(); // Обновляем список шаблонов вне зависимости от авторизации
        _filteredTemplates = _templates; // Изначально показываем все шаблоны
    }

    private void CreateNewTemplate()
    {
        NavigationManager.NavigateTo("/edit-template");
    }

    private void EditTemplate(Template template)
    {
        NavigationManager.NavigateTo($"/edit-template/{template.Id}");
    }

    private void ConfirmDeleteTemplate(Template template)
    {
        _templateToDelete = template;
    }

    private async Task HandleDeleteConfirmation(bool confirmed)
    {
        if (confirmed && _templateToDelete != null)
        {
            await TemplatesService.DeleteTemplateAsync(_templateToDelete.Id);
            await RefreshTemplates();
        }

        _templateToDelete = null;
    }

    private async Task RefreshTemplates()
    {
        _templates = await TemplatesService.GetTemplatesAsync();
        _filteredTemplates = _templates; // Обновляем список отображаемых шаблонов
    }

    private void SearchTemplates()
    {
        if (string.IsNullOrWhiteSpace(_searchTerm))
        {
            _filteredTemplates = _templates; // Если строка поиска пустая, показываем все шаблоны
        }
        else
        {
            _filteredTemplates = _templates.Where(t =>
                (t.Title != null && t.Title.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                (t.Description != null && t.Description.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                (t.Theme != null && t.Theme.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                (t.Tags != null && t.Tags.Any(tag => tag.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)))
            ).ToList();
        }
    }
}
