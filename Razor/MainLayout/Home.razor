@page "/"
@using FormsClone.CSharp.UserManagement.Interfaces
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IUserService UserService

<style>
    .hero-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 60vh; /* Уменьшенная высота для размещения всего контента */
        background: linear-gradient(145deg, #f5f5f7, #e1e1e4);
        text-align: center;
        padding: 0.5rem; /* Уменьшенные отступы */
    }

    .hero-title {
        font-size: 2.5rem; /* Уменьшенный размер шрифта */
        font-weight: bold;
        color: #1d1d1f;
        margin-bottom: 0.8rem;
    }

    .hero-subtitle {
        font-size: 1.2rem; /* Уменьшенный размер подзаголовка */
        color: #6e6e73;
        margin-bottom: 1.5rem;
    }

    .btn-large {
        padding: 1.5rem 2.2rem; /* Уменьшенные кнопки */
        font-size: 1rem;
        border-radius: 50px;
        border: none;
        color: white;
        margin: 0.5rem;
        background-color: #0071e3;
        transition: background-color 0.3s ease;
    }

    .btn-large:hover {
        background-color: #005bb5;
    }

    .btn-secondary {
        background-color: #e1e1e4;
        color: #1d1d1f;
    }

    .btn-secondary:hover {
        background-color: #c7c7cc;
    }

    .info-section {
        padding: 0.5rem; /* Уменьшенные отступы */
        text-align: center;
    }

    .info-section h4 {
        font-size: 1.5rem; /* Уменьшенный размер заголовка */
        margin-bottom: 0.8rem;
        color: #1d1d1f;
    }

    .info-section p {
        font-size: 1.2rem; /* Уменьшенный размер текста */
        color: #6e6e73;
        margin-bottom: 1rem;
    }

    .info-section .btn-info {
        padding: 1rem 2rem; /* Уменьшенная кнопка */
        font-size: 1rem;
        border-radius: 40px;
        border: none;
        background-color: #34c759;
        color: white;
        transition: background-color 0.3s ease;
    }

    .info-section .btn-info:hover {
        background-color: #2fa745;
    }
</style>

<div class="hero-section">
    <div class="hero-title">Create, Share, Analyze</div>
    <div class="hero-subtitle">Customizable Forms for Quizzes, Polls, and Surveys</div>

    <div>
        <button class="btn-large" @onclick="@(() => NavigationManager.NavigateTo("/register"))">Sign Up</button>
        <button class="btn-large btn-secondary" @onclick="@(() => NavigationManager.NavigateTo("/login"))">Log In</button>
    </div>
</div>

<div class="info-section">
    <h4>Basic Functionality for Everyone</h4>
    <p>Even without an account, you can search and view templates in read-only mode. Sign in to create your own!</p>
    <button class="btn-info" @onclick="@(() => NavigationManager.NavigateTo("/templates"))">Explore Templates</button>
</div>
